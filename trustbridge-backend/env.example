# Novax Yield Backend Environment Variables
# Copy this file to .env and update with your values

# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb://localhost:27017/novax-yield

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=4001
FRONTEND_URL=http://localhost:3001

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# ============================================
# BLOCKCHAIN (Etherlink Shadownet)
# ============================================
# Etherlink RPC URL
ETHERLINK_RPC_URL=https://node.shadownet.etherlink.com
ETHERLINK_CHAIN_ID=127823

# Contract Addresses (from deployments/novax-etherlink-127823.json)
USDC_ADDRESS=0x1557Cd76B77117a356133EDc0Ebdf33e7dF4b563
NVX_TOKEN_ADDRESS=0x75FAD2C4d58fD54B2e0f9D4e44D119758c7854aa
RWA_FACTORY_ADDRESS=0xD7201C0030Eb65B28270a5C095947abFF1725168
RECEIVABLE_FACTORY_ADDRESS=0x34f1d26CCFbEEdd90f215F46003fBA0AdC034a69
POOL_MANAGER_ADDRESS=0x8e2BD4865F1F120f8d5efabd2bCF1c34F39734E9

# Deployer Private Key (for contract interactions - KEEP SECRET!)
PRIVATE_KEY=your_private_key_here

# ============================================
# IPFS (Pinata)
# ============================================
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt_token
PINATA_GATEWAY_URL=gateway.pinata.cloud

# ============================================
# EMAIL (Optional - for notifications)
# ============================================
# Option 1: Resend (Recommended for cloud platforms like Render)
RESEND_API_KEY=your_resend_api_key

# Option 2: Gmail (for local development)
GMAIL_USER=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Option 3: cPanel SMTP (if available)
CPANEL_SMTP_HOST=smtp.yourdomain.com
CPANEL_SMTP_PORT=587
CPANEL_SMTP_USER=your_smtp_user
CPANEL_SMTP_PASSWORD=your_smtp_password
CPANEL_SMTP_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# PAYMENTS (Optional - for Stripe integration)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# NOTIFICATIONS (Optional)
# ============================================
# SMS - Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# SMS - Africa's Talking
AT_USERNAME=your_at_username
AT_API_KEY=your_at_api_key
AT_SENDER_ID=your_sender_id

# ============================================
# EXTERNAL APIs (Optional)
# ============================================
# Chainlink / Price Feeds
OPENWEATHER_API_KEY=your_openweather_api_key
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key

# ============================================
# DEPLOYMENT (Render, Railway, etc.)
# ============================================
# Render automatically sets these:
# RENDER=true
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

